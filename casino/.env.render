# Captain Cashout Casino - Render Environment Configuration

# Application
APP_NAME="Captain Cashout Casino"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=${RENDER_EXTERNAL_URL}

# Database - Uses same PostgreSQL as UPP system
DB_CONNECTION=pgsql
DATABASE_URL=${DATABASE_URL}
DB_HOST=
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=
DB_SSLMODE=require

# Cache & Session (uses Redis from UPP)
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
REDIS_URL=${REDIS_URL}

# Queue (using Redis)
QUEUE_CONNECTION=redis

# Mail Configuration (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@upp.realconnect.online"
MAIL_FROM_NAME="Captain Cashout Casino"

# Stripe Integration (shared with UPP)
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# UPP Integration
UPP_API_URL=${RENDER_EXTERNAL_URL}/api
UPP_WEBHOOK_SECRET=${WEBHOOK_SECRET}

# Casino Configuration
CASINO_CURRENCY=USD
CASINO_MIN_DEPOSIT=10.00
CASINO_MAX_DEPOSIT=10000.00
CASINO_MIN_WITHDRAWAL=20.00
CASINO_MAX_WITHDRAWAL=5000.00

# Demo Mode
CASINO_DEMO_MODE=false
CASINO_DEMO_BALANCE=1000.00

# Security
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Game Providers
GAME_PROVIDER_API_URL=
GAME_PROVIDER_API_KEY=
GAME_PROVIDER_SECRET=

# WebSocket Server (for real-time gaming)
WEBSOCKET_PORT=6001
WEBSOCKET_HOST=0.0.0.0

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info

# Broadcasting
BROADCAST_DRIVER=redis
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=

# File Storage
FILESYSTEM_DISK=local

# Security Headers
TRUSTED_PROXIES=*
CORS_ALLOWED_ORIGINS=${RENDER_EXTERNAL_URL}